# Smart AST Analyzer Configuration

# AI Provider (gemini or claude)
SMART_AST_AI_PROVIDER=gemini

# AI API Keys (if needed by CLI tools)
# GEMINI_API_KEY=your_gemini_api_key
# CLAUDE_API_KEY=your_claude_api_key

# Analysis Configuration
SMART_AST_MAX_FILES=50
SMART_AST_OUTPUT_DIR=./smart-ast-output
SMART_AST_CACHE_ENABLED=true

# Advanced Options
SMART_AST_TIMEOUT=300000
SMART_AST_MAX_RETRIES=3
SMART_AST_VERBOSE=false

# Output Formats (comma-separated: json,markdown,html,all)
SMART_AST_FORMATS=all

# Custom Patterns (comma-separated)
# SMART_AST_INCLUDE_PATTERNS="**/*.js,**/*.ts,**/*.jsx,**/*.tsx"
# SMART_AST_EXCLUDE_PATTERNS="node_modules/**,dist/**,build/**"